<% include ../partials/header.ejs %>

<div class="container p-5">
    <% if(typeof (data) !== "undefined") {%>

        <div class="alert <%= data.class_name %>" role="alert">
            <strong><%= data.message %></strong>
            <% for (let i=0; i< data.errors.length; i++) {%>
                
                <ul>
                    <li><%= data.errors[0] %></li>
                </ul>
                <% }  %>          
        </div>
    <%}%>
    <div class="card">
        <div class="card-header">
            Create Student
        </div>

        <div class="p-5">
            <form method="POST" accept="/students/create">
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" class="form-control" name="name" placeholder="John Wick">
                </div>
                <div class="form-group">
                    <label>Email address</label>
                    <input type="email" class="form-control" name="email" placeholder="john.wick@gmail.com">
                </div>

                <div class="form-group">
                    <label for="sel1">Class</label>
                    <select class="form-control" name="_class" id="sel1">
                        <option value=""></option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                        <option value="6">6</option>
                        <option value="7">7</option>
                        <option value="8">8</option>
                        <option value="9">9</option>
                        <option value="10">10</option>
                    </select>
                </div>

                <div class="radio">
                    <label><input type="radio" name="gender" value="Male" checked>Male</label>
                    <label><input type="radio" name="gender" value="Female">Female</label>
                </div>
                <div class="text-right">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>


<% include ../partials/footer.ejs %>